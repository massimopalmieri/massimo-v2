{
	"name": "massimo-v2",
	"private": true,
	"sideEffects": false,
	"type": "module",
	"scripts": {
		"build": "react-router build",
		"dev": "react-router dev",
		"db:migrations": "drizzle-kit generate --config ./drizzle.config.ts",
		"db:seed": "tsx ./app/drizzle/seed.ts",
		"lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
		"format": "prettier --check .",
		"start": "react-router-serve ./build/server/index.js",
		"typecheck": "react-router typegen && tsc",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"setup": "prisma generate && prisma migrate deploy",
		"prepare": "husky"
	},
	"dependencies": {
		"@epic-web/client-hints": "1.3.5",
		"@massimopalmieri/prettier-config": "2.0.2",
		"@prisma/client": "6.0.1",
		"@react-router/node": "^7.0.2",
		"@react-router/remix-routes-option-adapter": "7.0.2",
		"@react-router/serve": "^7.0.2",
		"bcrypt": "5.1.1",
		"better-sqlite3": "11.7.0",
		"framer-motion": "12.0.0-alpha.1",
		"isbot": "^5.1.17",
		"msw": "2.6.8",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-google-recaptcha-v3": "1.10.1",
		"react-router": "^7.0.2",
		"remix-auth": "4.0.0",
		"remix-auth-form": "3.0.0",
		"resend": "4.0.1",
		"tiny-invariant": "1.3.3",
		"zod": "3.24.1"
	},
	"devDependencies": {
		"@eslint/js": "9.16.0",
		"@faker-js/faker": "9.3.0",
		"@flydotio/dockerfile": "0.5.9",
		"@playwright/test": "1.49.1",
		"@react-router/dev": "^7.0.2",
		"@tailwindcss/aspect-ratio": "0.4.2",
		"@tailwindcss/forms": "0.5.9",
		"@tailwindcss/postcss": "0.0.0-development.1",
		"@tailwindcss/typography": "github:tailwindcss/typography",
		"@tailwindcss/vite": "4.0.0-beta.6",
		"@types/bcrypt": "5.0.2",
		"@types/better-sqlite3": "7.6.12",
		"@types/node": "22.10.2",
		"@types/react": "^19.0.1",
		"@types/react-dom": "^19.0.2",
		"@typescript-eslint/eslint-plugin": "^8.18.0",
		"@typescript-eslint/parser": "^8.18.0",
		"@vitejs/plugin-react": "4.3.4",
		"@vitest/coverage-v8": "2.1.8",
		"@vitest/ui": "2.1.8",
		"autoprefixer": "^10.4.20",
		"dotenv": "16.4.7",
		"eslint": "9.16.0",
		"eslint-import-resolver-typescript": "^3.7.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-jsx-a11y": "^6.10.2",
		"eslint-plugin-react": "7.37.2",
		"eslint-plugin-react-hooks": "^5.1.0",
		"globals": "15.13.0",
		"happy-dom": "15.11.7",
		"husky": "9.1.7",
		"jsdom": "25.0.1",
		"lint-staged": "15.2.11",
		"playwright": "1.49.1",
		"postcss": "^8.4.49",
		"prisma": "6.0.1",
		"tailwindcss": "4.0.0-beta.6",
		"tsx": "4.19.2",
		"typescript": "^5.7.2",
		"typescript-eslint": "8.18.0",
		"vite": "5.4.11",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "2.1.8"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"msw": {
		"workerDirectory": [
			"public"
		]
	},
	"prettier": "@massimopalmieri/prettier-config",
	"lint-staged": {
		"*.{ts,tsx}": "npm run lint",
		"*.{ts,tsx,css,md,json}": "npm run format"
	},
	"prisma": {
		"seed": "tsx prisma/seed.ts"
	}
}
